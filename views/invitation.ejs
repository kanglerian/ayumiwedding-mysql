<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-md-4 col-12 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Database</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= contacts.length %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-database fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-md-4 col-12 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Data Aktif</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <%= aktif.length %>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-toggle-on fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-md-4 col-12 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Data Tidak Aktif</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <%= tidakAktif.length %>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-toggle-off fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <a href="/registrasi" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Tambah Data</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <!-- <th>Kode</th> -->
                                    <th>Nama Pria</th>
                                    <th>Lokasi</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let no = 1; %>
                                <% contacts.forEach(contact => { %>
                                <tr>
                                    <td><%= no++ %></td>
                                    <!-- <td><%= contact.url %></td> -->
                                    <td><%= contact.nama_pria %></td>
                                    <td><%= contact.akad_tempat %></td>
                                    <td>
                                        <span class="badge badge-<%= contact.status == 0 ? 'danger' : 'success' %>">
                                            <%= contact.status == 0 ? 'Tidak aktif' : 'Aktif' %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/wedding/<%= contact.url %>" target="_blank" class="btn btn-primary btn-sm"><i class="fas fa-external-link-alt"></i></a>
                                        <form action="/status?_method=PUT" method="POST" class="d-inline">
                                            <input type="hidden" name="id" value="<%= contact.id %>">
                                            <input type="hidden" name="status" value="<%= contact.status == 0 ? 1 : 0 %>">
                                            <button type="submit" class="btn btn-<%= contact.status == 0 ? 'danger' : 'success' %> btn-sm">
                                                <i class="fas fa-toggle-<%= contact.status == 0 ? 'off' : 'on' %>"></i>
                                            </button>
                                        </form>
                                        <a href="/detail/<%= contact.id %>" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                        <form action="/hapus?_method=DELETE" method="POST" class="d-inline">
                                            <input type="hidden" name="id" value="<%= contact.id %>">
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->