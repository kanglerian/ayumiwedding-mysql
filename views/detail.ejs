<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form action="/update?_method=PUT" method="POST">

                <input type="hidden" name="id" value="<%= content.id %>">

                <div class="row mb-4">
                    <div class="col-12">
                        <div class="form-row align-items-center">
                            
                            <div class="col-auto">
                                <label class="sr-only">Google Maps</label>
                                <div class="input-group mb-2">
                                  <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-map-marked-alt"></i></div>
                                  </div>
                                  <input type="text" class="form-control" value="<%= content.lokasi_google_maps %>" name="lokasi_google_maps" placeholder="URL">
                                </div>
                              </div>
                            <div class="col-auto">
                              <label class="sr-only">URL</label>
                              <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                  <div class="input-group-text"><i class="fas fa-external-link-alt"></i></div>
                                </div>
                                <input type="text" class="form-control" name="url" value="<%= content.url %>" placeholder="URL">
                              </div>
                            </div>
                            <div class="col-auto">
                              <label class="sr-only">Status</label>
                              <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                  <div class="input-group-text <%= content.status == 1 ? 'bg-success' : 'bg-danger' %> text-white"><i class="fas fa-toggle-<%= content.status == 1 ? 'on' : 'off' %>"></i></div>
                                </div>
                                <select name="status" class="form-control">
                                    <option value="<%= content.status %>" selected><%= content.status == 1 ? 'Aktif' : 'Tidak Aktif' %></option>
                                    <option value="1">Aktif</option>
                                    <option value="0">Tidak Aktif</option>
                                </select>
                              </div>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary mb-2"><i class="fas fa-save"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6">
                        <div class="card shadow mb-4">
                            <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Data Mempelai Pria</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Nama Pria</label>
                                    <input type="text" class="form-control" value="<%= content.nama_pria %>" name="nama_pria">
                                </div>
                                <div class="form-group">
                                    <label>Anak ke:</label>
                                    <input type="number" class="form-control" value="<%= content.urutan_pria %>" name="urutan_pria">
                                </div>
                                <div class="form-group">
                                    <label>Nama Bapak Pria</label>
                                    <input type="text" class="form-control" value="<%= content.nama_bapak_pria %>" name="nama_bapak_pria">
                                </div>
                                <div class="form-group">
                                    <label>Nama Ibu Pria</label>
                                    <input type="text" class="form-control" value="<%= content.nama_ibu_pria %>" name="nama_ibu_pria">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="card shadow mb-4">
                            <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Data Mempelai Wanita</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Nama Wanita</label>
                                    <input type="text" class="form-control" value="<%= content.nama_wanita %>" name="nama_wanita">
                                </div>
                                <div class="form-group">
                                    <label>Anak ke:</label>
                                    <input type="number" class="form-control" value="<%= content.urutan_wanita %>" name="urutan_wanita">
                                </div>
                                <div class="form-group">
                                    <label>Nama Bapak Wanita</label>
                                    <input type="text" class="form-control" value="<%= content.nama_bapak_wanita %>" name="nama_bapak_wanita">
                                </div>
                                <div class="form-group">
                                    <label>Nama Ibu Wanita</label>
                                    <input type="text" class="form-control" value="<%= content.nama_ibu_wanita %>" name="nama_ibu_wanita">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="card shadow mb-4">
                            <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Data Akad</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Tanggal Akad</label>
                                    <input type="date" class="form-control" value="<%= moment(content.akad_tanggal).format('YYYY-MM-DD');%>" name="akad_tanggal">
                                </div>
                                <div class="form-group">
                                    <label>Waktu Akad</label>
                                    <input type="time" class="form-control" value="<%= content.akad_waktu %>" name="akad_waktu">
                                </div>
                                <div class="form-group">
                                    <label>Tempat Akad</label>
                                    <input type="text" class="form-control" value="<%= content.akad_tempat %>" name="akad_tempat">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="card shadow mb-4">
                            <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Data Resepsi</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Tanggal Resepsi</label>
                                    <input type="date" class="form-control" value="<%= moment(content.resepsi).format('YYYY-MM-DD');%>" name="resepsi_tanggal">
                                </div>
                                <div class="form-group">
                                    <label>Waktu Resepsi</label>
                                    <input type="time" class="form-control" value="<%= content.resepsi_waktu %>" name="resepsi_waktu">
                                </div>
                                <div class="form-group">
                                    <label>Tempat Resepsi</label>
                                    <input type="text" class="form-control" value="<%= content.resepsi_tempat %>" name="resepsi_tempat">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>